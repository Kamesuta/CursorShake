<Window x:Name="mainWindow" x:Class="CursorShake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursorShake"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="160"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None" Topmost="True" Closing="mainWindow_Closing" Focusable="False">
    <Border x:Name="border" VerticalAlignment="Top" Height="200" Cursor="None">
        <Image x:Name="image" Source="cursor.png" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Border>
</Window>
